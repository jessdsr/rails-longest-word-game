<div class="container p-3">
  <h2>New game</h2>
  <div class="letters mb-3">
    <% @letters.each do |letter| %>
      <div><%= letter %></div>
    <% end %>
  </div>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" class="input-group mb-3" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="grid" value="<%=@letters.join%>">
    <input type="hidden" name="start" value="<%=@start_time%>">
    <input type="text" name="answer" placeholder="Your word" class="form-control">
    <div class="input-group-append">
      <input type="submit" value="Play" class="btn btn-primary" class="form-group">
    </div>
  </form>
</div>

